{
  "manifest_version": 3,
  "name": "Mind Cave",
  "version": "1.1",
  "description": "Capture and organize web bookmarks in Mind Cave.",
  "permissions": ["tabs", "activeTab", "storage"],
  "host_permissions": [
    "https://mindcave.vercel.app/api/*",
    "http://localhost:3000/api/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
